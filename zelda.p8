-- code modified from class rain.p8

function _init() 
  player = {
    x = 20,
    y = 20,
    orientation = 0
  }
  -- orientation is 0,2,4,6
  -- left, right, up, down

  speed = 40 -- pixels/sec
  dt = 0
  lastframe = t()
end

function _draw()
	cls()
	spr(player.orientation, player.x, player.y, 2, 2)
end

function _update60()
  dt = t() - lastframe
  lastframe = t()
 
	input() 
end

function input()
  if(btn(0)) then --left
    player.x -= speed * dt
    player.orientation = 0
  elseif (btn(1)) then --right
    player.x += speed * dt
    player.orientation = 2
  elseif (btn(2)) then --up
    player.y -= speed * dt
    player.orientation = 4
  elseif (btn(3)) then --down
    player.y += speed * dt
    player.orientation = 6
  end

end
